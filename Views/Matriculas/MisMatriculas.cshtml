@model List<Matricula>

@{
    ViewData["Title"] = "Mis Matr√≠culas";
    
    // Estad√≠sticas para el resumen
    var totalMatriculas = Model.Count;
    var confirmadas = Model.Count(m => m.Estado == EstadoMatricula.Confirmada);
    var pendientes = Model.Count(m => m.Estado == EstadoMatricula.Pendiente);
    var canceladas = Model.Count(m => m.Estado == EstadoMatricula.Cancelada);
}

<div class="matriculas-container">
    <div class="matriculas-header">
        <h2>üìã Mis Matr√≠culas</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">‚úÖ @TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">‚ùå @TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="icon">üì≠</div>
            <h3>No tienes matr√≠culas registradas</h3>
            <p>Explora nuestro cat√°logo de cursos y encuentra el perfecto para ti.</p>
            <a href="@Url.Action("Catalogo", "Cursos")" class="btn btn-primary">
                <span>üîç</span> Explorar Cursos
            </a>
        </div>
    }
    else
    {
        <!-- Resumen de matr√≠culas -->
        <div class="resumen-matriculas">
            <h4>üìä Resumen de Matr√≠culas</h4>
            <div class="resumen-stats">
                <div class="stat-item">
                    <span class="stat-number">@totalMatriculas</span>
                    <span class="stat-label">Total</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@confirmadas</span>
                    <span class="stat-label">Confirmadas</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@pendientes</span>
                    <span class="stat-label">Pendientes</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@canceladas</span>
                    <span class="stat-label">Canceladas</span>
                </div>
            </div>
        </div>

        <!-- Tabla de matr√≠culas -->
        <div class="table-responsive">
            <table class="table enhanced-table">
                <thead>
                    <tr>
                        <th>Curso</th>
                        <th>C√≥digo</th>
                        <th>Fecha de Registro</th>
                        <th>Estado</th>
                        <th>Horario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var matricula in Model)
                    {
                        <tr>
                            <td data-label="Curso">@(matricula.Curso?.Nombre ?? "N/A")</td>
                            <td data-label="C√≥digo">@(matricula.Curso?.Codigo ?? "N/A")</td>
                            <td data-label="Fecha de Registro">@matricula.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                            <td data-label="Estado">
                                @switch (matricula.Estado)
                                {
                                    case EstadoMatricula.Pendiente:
                                        <span class="badge bg-warning">Pendiente</span>
                                        break;
                                    case EstadoMatricula.Confirmada:
                                        <span class="badge bg-success">Confirmada</span>
                                        break;
                                    case EstadoMatricula.Cancelada:
                                        <span class="badge bg-danger">Cancelada</span>
                                        break;
                                }
                            </td>
                            <td data-label="Horario">
                                @if (matricula.Curso != null)
                                {
                                    @($"{matricula.Curso.HorarioInicio:hh\\:mm} - {matricula.Curso.HorarioFin:hh\\:mm}")
                                }
                                else
                                {
                                    <text>N/A</text>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center">
        <a href="@Url.Action("Catalogo", "Cursos")" class="btn btn-primary">
            <span>üìö</span> Volver al Cat√°logo
        </a>
    </div>
</div>