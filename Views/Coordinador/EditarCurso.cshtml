@model CursoFormViewModel

@{
    ViewData["Title"] = "Editar Curso";
}

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <h2>‚úèÔ∏è Editar Curso</h2>
        </div>
        
        <div class="form-body">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Codigo" class="form-label">C√ìDIGO DEL CURSO</label>
                            <input asp-for="Codigo" class="form-control" placeholder="Ej: MAT101" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">NOMBRE DEL CURSO</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Matem√°ticas B√°sicas" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Creditos" class="form-label">CR√âDITOS</label>
                            <input asp-for="Creditos" class="form-control" min="1" max="10" />
                            <span asp-validation-for="Creditos" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CupoMaximo" class="form-label">CUPO M√ÅXIMO</label>
                            <input asp-for="CupoMaximo" class="form-control" min="1" max="100" />
                            <span asp-validation-for="CupoMaximo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HorarioInicio" class="form-label">HORA DE INICIO</label>
                            <input asp-for="HorarioInicio" type="time" class="form-control" />
                            <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="HorarioFin" class="form-label">HORA DE FINALIZACI√ìN</label>
                            <input asp-for="HorarioFin" type="time" class="form-control" />
                            <span asp-validation-for="HorarioFin" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" />
                                <label asp-for="Activo" class="form-check-label">CURSO ACTIVO</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <span>üíæ</span> Guardar Cambios
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <span>‚Üê</span> Volver al Panel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}